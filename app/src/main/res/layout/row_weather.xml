<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="weather"
            type="sw.es.model.local.Weather" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:padding="@dimen/m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ms"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="30sp"
                        android:text="@{weather.getName()}"
                        tools:text="Location name" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/updated_at" />

                        <TextView
                            android:id="@+id/text_date"
                            android:layout_marginLeft="@dimen/ms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{weather.getDatetimeFormatted()}"
                            tools:text="thrusday, 25/06/2015" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/ms"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="top"
                            android:id="@+id/text_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="40sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@{weather.getTempFormatted()}"
                            tools:text="16" />

                        <TextView
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="ÂºC"/>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ms"
                            android:orientation="vertical">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/humidity" />

                                <TextView
                                    android:layout_marginLeft="@dimen/mxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{weather.getHumidityFormatted()}"
                                    tools:text="50" />

                                <TextView
                                    android:layout_marginLeft="@dimen/mxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="%" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/wind_speed" />

                                <TextView
                                    android:layout_marginLeft="@dimen/mxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{weather.getWindSpeedFormatted()}"
                                    tools:text="50" />

                                <TextView
                                    android:layout_marginLeft="@dimen/mxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="m/s" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/cloudiness" />

                                <TextView
                                    android:layout_marginLeft="@dimen/mxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@{weather.getCloudinessFormatted()}"
                                    tools:text="50" />

                                <TextView
                                    android:layout_marginLeft="@dimen/mxs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="%" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        app:imageUrl="@{weather.getIcon()}"
                        android:scaleType="centerCrop"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>

                    <TextView
                        android:id="@+id/text_description"
                        android:layout_marginTop="@dimen/ms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{weather.getDescription()}"
                        tools:text="Short Description" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>